<!DOCTYPE html>
<html>
  <head>
    <title>Users index page</title>
  </head>

  <body>
    <h1>Users</h1>
    <% @users.each do |user| %>
      <table>
        <tr>
          <th>FirstName</th>
          <th>LastName</th>
          <th>Age</th>
          <th>Email</th>
        </tr>
        <tr>
          <td><%= user['firstname'] %></td>
          <td><%= user['lastname'] %></td>
          <td><%= user['age'] %></td>
          <td><%= user['email'] %></td>
        </tr>
      </table>
    <% end %>
  </body>
</html>